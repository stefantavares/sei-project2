<%- include('../partials/header') %>

<div>TASKS: </div>
<br>

<% if (tasklist.tasks.length) { %>
<table>
  <thead>
    <tr>
    </tr>
  </thead>
  <tbody>
    <% tasklist.tasks.forEach(function(t) { %>
        <tr id="one-list-container">
        <td><%= t.content %></td>
        <td>IMPORTANT: <%= t.important ? 'YES' : 'NO' %></td>
        <td><a href="/tasklists/<%= tasklist._id %>/notes/new">NOTES:</a></td>
        <td>  
          <form action="/tasklists/<%= t._id %>/<%= taskId %>?_method=DELETE" id="delete-button" method="POST">
            <button class="delete-button" type="submit">X</button>
            </form>
          </td>
      </tr>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<h5>No Tasks Yet</h5>
<% } %>

<%- include('../partials/footer') %>