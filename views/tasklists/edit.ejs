<%- include('../partials/header') %>

<div id="add-task-container">
    <form action="/tasklists/<%= tasklist._id %>/tasks" method="POST">
      <div id="add-task-section">
        <label id="add-task-label" for="">ADD A TASK:</label>
        <textarea id="add-task-content" name="content" rows="2" cols="30" placeholder="Add task here..."></textarea>
      </div>
      <div id="important" class="align-right">
        <label id="important-label" for="">IMPORTANT?:</label>
        <input id="important-checkbox" type="checkbox" name="important">
      </div>
        <div class="align-right">
        <input id="add-task-btn" class="submit-button" type="submit" value="ADD TASK">
      </div>
      </form>
    </div>

<%- include('../partials/footer') %>